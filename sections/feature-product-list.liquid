{{ 'template-collection.css' | asset_url | stylesheet_tag }}
{{ 'component-loading-overlay.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}

{% if section.settings.image_shape == 'blob' %}
  {{ 'mask-blobs.css' | asset_url | stylesheet_tag }}
{%- endif -%}

{%- if section.settings.enable_quick_add -%}
  {{ 'quick-add.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

<div>
  <div class="fp-container">
    <div class="fp-text-section">
      <h2 class="{{section.settings.heading_font_style}}">CATENA RAINBOW SET</h2>
      <p class="{{section.settings.body_font_style}}">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam ultricies nec ipsum id tincidunt. In hac
        habitasse platea dictumst. Donec at erat erat.
      </p>
      {{ section.blocks[0].settings.product_image | image_url: width: 1024 | image_tag }}
    </div>
    <div>
      {{ section.blocks[1].settings.product_image | image_url: width: 1024 | image_tag }}
    </div>
  </div>
  <div class="fp-product-container">
    {%- for product in collection.products limit: 4 -%}
      <div
        class="{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        {% if settings.animations_reveal_on_scroll %}
          data-cascade
          style="--animation-order: {{ forloop.index }};"
        {% endif %}
      >
        {% render 'card-product',
          card_product: product,
          media_aspect_ratio: section.settings.image_ratio,
          image_shape: section.settings.image_shape,
          show_secondary_image: section.settings.show_secondary_image,
          show_vendor: section.settings.show_vendor,
          show_rating: section.settings.show_rating,
          lazy_load: lazy_load,
          show_quick_add: section.settings.enable_quick_add,
          section_id: section.id
        %}
      </div>
    {% endfor %}
  </div>
</div>

<style>
  h2,
  p {
    margin: 0;
  }

  h2 {
    line-height: 1;
  }

  .fp-container {
    display: flex;
    flex-direction: row;
    gap: 24px;
    width: 100%;
  }

  .fp-text-section {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .fp-product-container {
    display: flex;
    flex-direction: row;
  }

  img {
    width: 100%;
    height: auto; /* adjust to auto for correct aspect ratio */
    object-fit: cover;
  }

  /* Media query for large tablets and below */
  @media (max-width: 1024px) {
    h2 {
      font-size: calc(20px + (28 - 20) * ((100vw - 320px) / (1024 - 320)));
    }

    p {
      font-size: 16px;
    }
  }

  /* Media query for small tablets and below */
  @media (max-width: 768px) {
    .fp-container {
      flex-direction: column;
    }
    h2 {
      font-size: calc(18px + (24 - 18) * ((100vw - 320px) / (768 - 320)));
    }

    p {
      font-size: 15px;
    }

    .fp-product-container {
      flex-direction: column;
    }
  }

  /* Media query for mobile phones and below */
  @media (max-width: 480px) {
    h2 {
      font-size: 16px;
    }

    p {
      font-size: 14px;
    }

    .fp-container {
      gap: 16px;
    }

    .fp-text-section {
      gap: 16px;
    }
  }

  /* Adjustments for product grid on different viewports */
  @media (min-width: 769px) {
    .fp-container > div {
      flex: 1;
    }
  }
  @media (max-width: 768px) and (min-width: 481px) {
    .fp-container > div {
      flex-basis: 50%;
    }
  }
  @media (max-width: 480px) {
    .fp-container > div {
      flex-basis: 100%;
    }
  }
</style>

