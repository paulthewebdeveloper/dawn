<section class="section-container">
  <div class="left-div">
    <div class="wrapper">
      {{ section.settings.left_image | image_url: width: 1024 | image_tag }}
      <div
        class="follower hide-on-mobile {{section.settings.link_font_style}}"
        data-url="{{section.settings.first_product.url}}"
      >
        <span>VIEW</span>
      </div>
    </div>
  </div>

  <div class="center-div">
    {{ section.settings.center_image | image_url: height: 1024 | image_tag }}
  </div>

  <div class="right-div">
    <div class="wrapper">
      {{ section.settings.right_image | image_url: width: 1024 | image_tag }}
      <div
        class="follower hide-on-mobile {{section.settings.link_font_style}}"
        data-url="{{section.settings.second_product.url}}"
      >
        <span>VIEW</span>
      </div>
    </div>
  </div>
</section>

<style>
  .section-container {
    display: flex;
    gap: 24px;
  }

  .left-div {
    width: 80%;
    margin-top: 5%;
    margin-bottom: auto;
    position: relative;
  }

  .center-div {
    width: 160%;
  }

  .right-div {
    width: 60%;
    margin-top: auto;
    margin-bottom: 5%;
  }

  .wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .follower {
    background: rgba(0, 0, 0, 0.7);
    border-radius: 9999px;
    width: 94px;
    height: 94px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 3rem;
    position: absolute;
    cursor: pointer;
  }

  .follower > span {
    user-select: none;
  }

  /* For responsive design */
  @media screen and (max-width: 990px) {
    .left-div,
    .center-div,
    .right-div {
      width: 100%;
      margin: 0;
    }

    .hide-on-mobile {
      display: none;
    }
  }
</style>

<script>
  function clamp(value, min, max) {
    return Math.min(Math.max(value, min), max);
  }

  let wrappers = document.querySelectorAll('.wrapper');

  wrappers.forEach((wrapper) => {
    let follower = wrapper.querySelector('.follower');

    function setFollowerToCenter() {
      let rect = wrapper.getBoundingClientRect();
      let centerX = rect.width / 2 - 47;
      let centerY = rect.height / 2 - 47;

      follower.style.left = `${centerX}px`;
      follower.style.top = `${centerY}px`;
    }

    setFollowerToCenter();

    wrapper.addEventListener('mousemove', (e) => {
      let rect = wrapper.getBoundingClientRect();
      let x = e.clientX - rect.left - 47;
      let y = e.clientY - rect.top - 47;
      x = clamp(x, 0, rect.width - 94);
      y = clamp(y, 0, rect.height - 94);

      gsap.to(follower, {
        duration: 0.3,
        left: `${x}px`,
        top: `${y}px`,
        ease: 'power1.out',
      });
    });

    wrapper.addEventListener('mouseleave', () => {
      let rect = wrapper.getBoundingClientRect();
      let centerX = rect.width / 2 - 47;
      let centerY = rect.height / 2 - 47;

      gsap.to(follower, {
        duration: 0.3,
        left: `${centerX}px`,
        top: `${centerY}px`,
        ease: 'power1.out',
      });
    });
  });

  // Convert HTMLCollection to an array and loop through each element
  Array.from(document.getElementsByClassName('follower')).forEach((follower) => {
    // Add a click event listener to each follower element
    follower.addEventListener('click', (e) => {
      // Check if the clicked follower element has a 'data-url' attribute
      if (follower.getAttribute('data-url')) {
        // If it does, navigate to the URL specified in the 'data-url' attribute
        window.location = follower.getAttribute('data-url');
      }
    });
  });
</script>

