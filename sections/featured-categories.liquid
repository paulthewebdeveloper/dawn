      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  .custom-section-padding {
    padding: 0 1.5rem;
  }

  .outer-container {
    position: relative;
  }

  .flex-container {
    display: flex;
    gap: 12px;
    justify-content: center;
    align-items: center;
  }

  .catena-container {
    position: relative;
    display: flex;
    justify-content: center;
  }

  .catena-heading {
    pointer-events: none;
    position: relative;
    z-index: 10;
    width: 100%;
    font-size: 5rem;
    margin: 0;
  }

  .categories-image-wrapper {
    position: absolute;
    background-color: #e7e7e7;
    height: 250px;
    width: 200px;
    transform-origin: top;
    display: flex;
    align-items: flex-end;
    rotate: -5deg;
    pointer-events: none;
  }

  .categories-image-wrapper > img {
    margin-bottom: 20%;
    rotate: 30deg;
    padding: 2.5rem;
  }
</style>

<script>
  // Select all the elements with the class "catena"
  const catenas = document.querySelectorAll('.catena');

  catenas.forEach((catena) => {
    // For each "catena", get its associated "wrapper"
    const wrapper = catena.querySelector('.wrapper');

    gsap.set(wrapper, { scaleY: 0 });
    gsap.set(wrapper.querySelector('img'), { opacity: 0 });

    catena.addEventListener('mouseover', () => {
      gsap.killTweensOf(wrapper);
      gsap.killTweensOf(wrapper.querySelector('img'));

      const tl = gsap.timeline();
      tl.to(wrapper, { scaleY: 1, duration: 0.25, ease: 'Power2.easeInOut' }).to(wrapper.querySelector('img'), {
        opacity: 1,
        duration: 0.25,
        ease: 'Power2.easeInOut',
      });
    });

    catena.addEventListener('mouseleave', () => {
      gsap.killTweensOf(wrapper);
      gsap.killTweensOf(wrapper.querySelector('img'));

      const tl = gsap.timeline();
      tl.to(wrapper.querySelector('img'), { opacity: 0, duration: 0.25, ease: 'Power2.easeInOut' }).to(wrapper, {
        scaleY: 0,
        duration: 0.25,
        ease: 'Power2.easeInOut',
      });
    });
  });
</script>

